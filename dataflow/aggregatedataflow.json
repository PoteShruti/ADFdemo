{
	"name": "aggregatedataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "inputstudent",
						"type": "DatasetReference"
					},
					"name": "student"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "OUTPUTDATASET",
						"type": "DatasetReference"
					},
					"name": "Totalstudentbyid"
				}
			],
			"transformations": [
				{
					"name": "aggregate1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Name as string,",
				"          Age as string,",
				"          deptID as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> student",
				"student aggregate(groupBy(deptID),",
				"     Totalstudent = count(deptID)) ~> aggregate1",
				"aggregate1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['TotalstudentbyID.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          deptID,",
				"          Totalstudent",
				"     ),",
				"     partitionBy('hash', 1)) ~> Totalstudentbyid"
			]
		}
	}
}